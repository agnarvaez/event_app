%h1 Listing roles

%table.table.table.hover
  %thead
    %tr
      %th Name
      %th Description
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.description
        %td= link_to 'Show', role, class: 'btn btn-warning btn-lg'
        %td= link_to 'Edit', edit_role_path(role), class: 'btn btn-warning btn-lg'
        %td= link_to 'Destroy', role, class: 'btn btn-warning btn-lg', method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Role', new_role_path, class: 'btn btn-warning btn-lg'
